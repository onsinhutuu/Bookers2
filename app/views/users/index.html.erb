<div class="container">
    <div class="row">
    <div class="col-xs-3">
<h3>User info</h3>
<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'100x100', class: "img-circle pull-left profile-thumb" %>

<h3>name</h3><h3 class="profile-name"><%= @user.name %></h3>

<h3>introduction</h3><h3 class="profile-introduction"><%= @user.introduction %></h3>

<%= link_to "プロフィール編集", edit_user_path(@user.id) %>
<h3>New book</h3>
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', product: f.object %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_field :body %>
<br><%= f.submit 'Create Book' %></br>

<% end %>
</div>
<div class="col-xs-9">
<h3>Users</h3>
<table class="table">
<thead>
<tr>
<th>image</th>
<th>name</th>
</tr>
</thead>

<tbody>
<% @users.each do |user| %>
<tr>
<td>
<%= link_to user_path(user.id) do %>
<%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'50x50', class: "img-circle pull-left profile-thumb" %>
<% end %>
</td>
<td>
<%= user.name %>
</td>
<td>
フォロー数:<%= user.following.count %>
<td>
フォロワー数:<%= user.followers.count %>
</td>
<td>
<%= render 'users/follow_form', user: user %>
</td>
<td>
<%= link_to "Show", user_path(user.id) %>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
